@model Technical_Test.Models.Car

@{
        ViewData["Title"] = "Delete Confirmation";
    }

<h1>@ViewData["Title"]</h1>
<hr />

<div class="alert alert-danger">
    <h5>Are you want to delete the car: @Model.NumberPlate?</h5>
    @using (Html.BeginForm("deleteCar", "Car", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id)
        <button type="submit" class="btn btn-danger">Yes</button>
        @Html.ActionLink("No", "listCars", "Car", null, new { @class = "btn btn-primary" })
    }
</div>

